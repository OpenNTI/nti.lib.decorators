  "author": "nextthought",
  "license": "UNLICENSED",
  "description": "Provides common decorators",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "test": "make test",
    "start": "make check",
    "prepublish": "not-in-install && make || in-install",
